<div *ngIf="order"
    class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pb-2 mb-3 border-bottom">
    <h5>Order
        <span class="badge badge-light bg-info text-white"> {{order.date_of_order}} </span>
        &rsaquo; <span class="badge badge-light"> {{order.customer.customer_name}} </span>
    </h5>
    <div class="btn-toolbar mb-2 mb-md-0">
        <div class="btn-group mr-2">

            <a [routerLink]="['/order/index']" routerLinkActive="active"
                class="btn btn-outline-info btn-sm"><i class="fa fa-list"></i> order list <span
                    class="sr-only">(current)</span></a> 
                    <a [routerLink]="['/order/edit', order.order_id]" routerLinkActive="active"
                    class="btn btn-outline-warning btn-sm ml-2"><i class="fa fa-edit"></i> update order <span
                        class="sr-only">(current)</span></a>
                <a class="btn btn-outline-danger btn-sm ml-2"><i class="fa fa-trash"></i> delete order <span
                    class="sr-only">(current)</span></a>

        </div>

    </div>
</div>

